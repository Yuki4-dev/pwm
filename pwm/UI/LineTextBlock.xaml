<UserControl
    x:Class="pwm.UI.LineTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:pwm.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid ToolTipService.ToolTip="{x:Bind Text, Mode=OneWay}">
        <RichTextBlock x:Name="HighlightingTextBlock">
            <Paragraph>
                <Run x:Name="TextContent" />
            </Paragraph>
        </RichTextBlock>
    </Grid>

</UserControl>
